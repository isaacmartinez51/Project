    .table {
        grid-area: table;
        background: #6d932b;
        color: #23475b;
        padding: 10px 15px;
        border-radius: 5px;
        border: none;
        font-size: 16px;
        min-width: 700px;
        min-height: 400px;
        border-bottom: 5px solid #6d932b; 
        /* display: inline-block; */
    }


    #rowcolor {
        background: green;
    }
    #rowcolorFalse {
        background: red;
    }
    .footer {
        grid-area: footer;
    }
    .tableStyle{
        background-color: white;
        text-align: left;
        width: 100%; 
        height: 100%;
        color: black;
    }
    th,td{
        padding: 20px;
    }
    thead{
        background-color: #246355;
        border-bottom: solid 5px;
        color: white;
        /*padding: 15;*/
        min-height: 100px;
    }
    tr:nth-child(even){
        background-color: #ddd;
    }
    tr:hover td{
        background-color: #369681;
        color:white;
    }
</style>

<div class="hero">

    <div class="hero-container">

        <header class="header" id="titulo">
            <h2>@ViewData["Title"]</h2>
            @*<h3>@ViewData["Message"]<strong>@Model.Portal</strong></h3>*@
            <input type="text" value="@Model.Portal" id="portal" hidden disabled="disabled" />
            <input type="text" value="@Model.Embarque" id="embarque" hidden disabled="disabled" />
            <input type="button" class="btn btn-default" value="Regresar al monitor" onclick="window.location='@Url.Action("Monitor","Home", @Model)'" />
        </header>
        <!-- <div class="table"> -->

            <table id="dt_basic" class="table tableStyle">  <!-- -->
                <thead>
                    <tr>
                        <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().traza)</th>
                        <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().partida)</th>
                        <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().continentalpartnumber)</th>
                        <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().total_pallets)</th>
                        @*<th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.OrderDetail.FirstOrDefault().Leido)</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetail)
                    {
                        @if (item.Leido == true)
                        {
                            <tr id="rowcolor">
                                <td id="traza">
                                    @Html.DisplayFor(modelItem => item.traza)
                                </td>
                                <td id="partida">
                                    @Html.DisplayFor(modelItem => item.partida)
                                </td>
                                <td id="continentalpartnumber">
                                    @Html.DisplayFor(modelItem => item.continentalpartnumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.total_pallets)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Leido)

                                    </td>*@
                            </tr>
                        }
                        else
                        {
                            <tr id="rowcolorFalse">
                                <td id="traza">
                                    @Html.DisplayFor(modelItem => item.traza)
                                </td>
                                <td id="partida">
                                    @Html.DisplayFor(modelItem => item.partida)
                                </td>
                                <td id="continentalpartnumber">
                                    @Html.DisplayFor(modelItem => item.continentalpartnumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.total_pallets)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        <!-- </div> -->
        <hr />
        <footer class="footer">
           <p>&copy; 2019 - Gemetytec</p>
        </footer>
    </div>

</div>

